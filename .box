################################################
## GENERAL SETTINGS
################################################
shared_writable_dirs:
    - cache
    - logs

################################################
## WEB SPECIFIC SETTINGS
################################################
document_root: web
default_gateway: app.php
index_list: [app.php]

################################################
## PHP SPECIFIC SETTINGS
################################################
php_version: 5.3.5
php_extensions: [intl,mbstring,xsl,apc,mysql]
php_short_open_tag: Off
magic_quotes_gpc: Off